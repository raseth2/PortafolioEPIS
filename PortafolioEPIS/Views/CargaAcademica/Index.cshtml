@model List<PortafolioEPIS.Models.Tbl_CargaAcademica>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-sm-4 col-3">
        <h4 class="page-title">Carga Académica</h4>
    </div>
    <div class="col-sm-8 col-9 text-right m-b-20">
        <div class="form-check form-check-inline">
            <a href="~/CargaAcademica/Agregar" class="btn btn-primary btn-rounded float-right"><i class="fa fa-plus"></i> Nuevo Registro</a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card-box">
            <div class="table-responsive">
                <table id="example" class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Semestre</th>
                            <th>Nombre</th>
                            <th>Fecha Inicio</th>
                            <th>Fecha Fin</th>
                            <th class="text-center">Estado</th>
                            <th class="text-right">Accción</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ int num = 0;}
                        @foreach (var p in Model)
                        {
                            num = num + 1;
                            <tr>
                                <td>@num</td>
                                <td><a href="~/DetalleCargaAcademica/Index/@p.Codigo_CargaAcademica">@p.Tbl_Semestre.Nombre_Semestre</a> </td>
                                <td>@p.Nombre_CargaAcademica</td>
                                <td>@DateTime.Parse((p.FechaInicio_CargaAcademica).ToString()).ToShortDateString()</td>
                                <td>@DateTime.Parse((p.FechaFin_CargaAcademica).ToString()).ToShortDateString()</td>
                                @if (p.Estado_CargaAcademica == true)
                                {
                                    <td><span class="custom-badge status-green">Activo</span></td>
                                }
                                else
                                {
                                    <td><span class="custom-badge status-red">Inactivo</span></td>
                                }
                                <td class="text-right">
                                    <div class="dropdown dropdown-action">
                                        <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                                        <div class="dropdown-menu dropdown-menu-right">

                                            <a class="dropdown-item" href="~/CargaAcademica/Agregar/@p.Codigo_CargaAcademica"><i class="fa fa-pencil m-r-5"></i> Editar</a>
                                            <a class="dropdown-item" href="~/CargaAcademica/Eliminar/@p.Codigo_CargaAcademica" onclick="return confirm('¿Esta Seguro de Eliminar.........?');"><i class="fa fa-trash-o m-r-5"></i> Eliminar</a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>






