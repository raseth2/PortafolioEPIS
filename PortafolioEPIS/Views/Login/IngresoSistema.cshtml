
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>IngresoSistema</title>
    <link href="~/assets/Login/login.css" rel="stylesheet" />

</head>
<body>
    <div class="wrapper fadeInDown">
        <div id="formContent">
            <!-- Tabs Titles -->
            <h2 style="color:black"> Ingreso al Sistema </h2>
            <!-- Icon -->
            <div class="fadeIn first">
                <img src="~/assets/Login/docente.png" id="icon" alt="User Icon" />
            </div>

            <!-- Login Form -->
            @using (Html.BeginForm("Validar", "Login", FormMethod.Post))
            {

                <input type="text" class="fadeIn second" name="Usuario" placeholder="Usuario">
                <input type="password" class="fadeIn third" name="Password" placeholder="Contraseña">
                <b><center>Ingresar como:</center></b>
                <br />
                <input type="radio" checked required value="2" name="cargo" class="fadeIn third" /><label>Administrador</label>
                <input type="radio" required value="3" name="cargo" class="fadeIn third" /><label>Docente</label>
                <br />
                <br />
                <input type="submit" class="fadeIn fourth" value="INGRESAR">


            }

            <!-- Remind Passowrd -->
            <div id="formFooter">
                <a href="#">PORTAFOLIO DOCENTE</a>
            </div>

        </div>
    </div>
    <script src="~/assets/Login/login.js"></script>
</body>
</html>

