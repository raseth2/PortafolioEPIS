@model List<PortafolioEPIS.Models.Tbl_DetalleCargaAcademica>
@{
    Layout = null;
}

<div class="profile-tabs">

    <div class="tab-pane show active" id="about-cont">
        <div class="row">
            <div class="col-md-12">
                <div class="card-box">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="table-responsive">
                                <table class="table table-striped custom-table mb-0 datatable">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Código</th>
                                            <th>Asignatura</th>
                                            <th>Tipo</th>
                                            <th>Ciclo</th>
                                            <th>Seccion</th>

                                            <th class="text-right">Accción</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{ int num = 0;}
                                        @foreach (var p in Model)
                                        {
                                            if (p.Tbl_Docente.Codigo_Docente.Equals(Convert.ToInt32(ViewBag.id)))
                                            {
                                                num = num + 1;
                                                <tr>
                                                    <td>@num</td>
                                                    <td><a href="~/DetalleCargaAcademica/Ver/@p.Tbl_DetallePlanEstudio.CodigoCurso_DetallePlanEstudio">@p.Tbl_DetallePlanEstudio.CodigoCurso_DetallePlanEstudio</a></td>
                                                    <td>@p.Tbl_DetallePlanEstudio.Asignatura_DetallePlanEstudio</td>
                                                    <td>@p.Tbl_DetallePlanEstudio.TipoCurso_DetallePlanEstudio</td>
                                                    <td>@p.Tbl_DetallePlanEstudio.Ciclo_DetallePlanEstudio</td>
                                                    <td>@p.Tbl_Seccion.Nombre_Seccion</td>


                                                    <td class="text-right">
                                                        <div class="dropdown dropdown-action">
                                                            <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                                                            <div class="dropdown-menu dropdown-menu-right">
                                                                <a class="dropdown-item" href="~/PruebaEntrada/Agregar/@p.Codigo_DetalleCargaAcademica"><i class="fa fa-check m-r-5"></i> Informe Prueba de Entrada</a>
                                                                <a class="dropdown-item" href="#"><i class="fa fa-check m-r-5"></i> Informe Portafolio U1</a>
                                                                <a class="dropdown-item" href="#"><i class="fa fa-check m-r-5"></i> Informe Portafolio U2</a>
                                                                <a class="dropdown-item" href="#"><i class="fa fa-check m-r-5"></i> Informe Portafolio U3</a>
                                                                <a class="dropdown-item" href="#"><i class="fa fa-check m-r-5"></i> Informe Final</a>
                                                            </div>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>





