@model List<PortafolioEPIS.Models.Tbl_CargoDocente>

<div class="row">
    <div class="col-sm-4 col-3">
        <h4 class="page-title">Lista de Cargos</h4>
    </div>
    <div class="col-sm-8 col-9 text-right m-b-20">
        <a href="~/Cargo/Agregar" class="btn btn btn-primary btn-rounded float-right"><i class="fa fa-plus"></i> Nuevo Registro</a>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card-box">
            <div class="table-responsive">
                <table id="example" class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Nombre</th>
                            <th>Estado</th>
                            <th class="text-right">Acción</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ int conteo = 0; }
                        @foreach (var s in Model)
                        {
                            conteo = conteo + 1;
                            <tr>
                                <td>@conteo</td>
                                <td>@(s.Nombre_CargoDocente)</td>
                                <th><span class="custom-badge @(s.Estado_CargoDocente == true ?"status-green":"status-red")">@(s.Estado_CargoDocente == true ? "Activo" : "Inactivo")</span></th>
                                <td class="text-right">
                                    <div class="dropdown dropdown-action">
                                        <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                                        <div class="dropdown-menu dropdown-menu-right">
                                            <a class="dropdown-item" href="~/Cargo/Agregar/@s.Codigo_CargoDocente"><i class="fa fa-pencil m-r-5"></i> Editar</a>
                                            <a class="dropdown-item" href="~/Cargo/Eliminar/@s.Codigo_CargoDocente" onclick="return confirm('¿Esta Seguro de Eliminar.........?');"><i class="fa fa-trash-o m-r-5"></i> Eliminar</a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!--Resumen general de Semestre-->
            <br />
            @{
                int cantActivos = 0, cantInactivos = 0;
                foreach (var s in Model)
                {
                    if (s.Estado_CargoDocente.Equals(true))
                    {
                        cantActivos++;
                    }
                    else
                    {
                        cantInactivos++;
                    }
                }
            }

            <div class="card-box profile-header">
                <div class="row clearfix">
                    <div class="col-md-12">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item active" aria-current="page">RESUMEN - CANTIDAD DE REGISTROS</li>
                            </ol>
                        </nav>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">

                        <div class="profile-view">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="profile-info-left">
                                        <ul class="personal-info">
                                            <li>
                                                <span class="title">Cargos Activos:</span>
                                                <span class="text">@cantActivos</span>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <ul class="personal-info">
                                        <li>
                                            <span class="title">Cargos Inactivos:</span>
                                            <span class="text">@cantInactivos</span>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        
    </div>
</div>

