@model List<PortafolioEPIS.Models.Tbl_Usuario>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-sm-4 col-3">
        <h4 class="page-title">Lista de Usuarios</h4>
    </div>
    <div class="col-sm-8 col-9 text-right m-b-20">
        <div class="form-check form-check-inline">
            <a href="~/Usuario/Agregar" class="btn btn-primary btn-rounded float-right"><i class="fa fa-plus"></i> Nuevo Registro</a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card-box">
            <div class="table-responsive">
                <table id="example" class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Docente</th>
                            <th>Nombre Usuario</th>
                            <th>Fecha Creacion</th>
                            <th>Fecha Actualizacion</th>
                            <th class="text-center">Estado</th>
                            <th class="text-right">Accción</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ int num = 0;}
                        @foreach (var p in Model)
                        {
                            num = num + 1;
                            <tr>
                                <td>@num</td>
                                <td>@p.Tbl_Docente.Nombres_Docente @p.Tbl_Docente.Apellidos_Docente</td>
                                <td>@p.Nombre_Usuario</td>
                                <td>@p.FechaCreacion_Usuario</td>
                                <td>@p.FechaActualizacion_Usuario</td>
                                @if (p.Estado_Usuario == true)
                                {
                                    <td><span class="custom-badge status-green">Activo</span></td>
                                }
                                else
                                {
                                    <td><span class="custom-badge status-red">Inactivo</span></td>
                                }
                                <td class="text-right">
                                    <div class="dropdown dropdown-action">
                                        <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                                        <div class="dropdown-menu dropdown-menu-right">

                                            <a class="dropdown-item" href="~/Usuario/Agregar/@p.Codigo_Usuario"><i class="fa fa-pencil m-r-5"></i> Editar</a>
                                            <a class="dropdown-item" href="~/Usuario/Eliminar/@p.Codigo_Usuario" onclick="return confirm('¿Esta Seguro de Eliminar.........?');"><i class="fa fa-trash-o m-r-5"></i> Eliminar</a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

