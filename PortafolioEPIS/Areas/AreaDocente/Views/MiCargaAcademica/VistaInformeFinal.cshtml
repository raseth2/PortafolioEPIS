@model List<PortafolioEPIS.Models.Tbl_DetalleCargaAcademica>
@{
    Layout = null;
    List<PortafolioEPIS.Models.Tbl_InformeFinal> prueba = ViewBag.Prueba;
    int idpruebas = 0;
    string estado = "";
    int detalleplan = 0;
}



<div class="profile-tabs">

    <div class="row">
        <div class="col-md-12">
            <div class="card-box">
                <div class="table-responsive">
                    <table id="example3" class="table table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Código</th>
                                <th>Asignatura</th>
                                <th>Docente</th>
                                <th>Tipo</th>
                                <th>Ciclo</th>
                                <th>Seccion</th>
                                <th>Estado</th>

                                <th class="text-right">Accción</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ int num = 0;}
                            @foreach (var q in prueba)
                            {
                              
                            foreach (var p in Model)

                            {

                                if (p.Tbl_Docente.Codigo_Docente.Equals(Convert.ToInt32(ViewBag.id)) && p.Tbl_Semestre.Estado_Semestre == true)
                                {

                                    if (p.Codigo_DetalleCargaAcademica == q.Codigo_DetalleCargaAcademica)
                                    {
                                        estado = q.Estado_InformeFinal;
                                        num = num + 1;
                            <tr>
                                <td>@num</td>
                                <td>@p.Tbl_DetallePlanEstudio.CodigoCurso_DetallePlanEstudio</td>
                                <td>@p.Tbl_DetallePlanEstudio.Asignatura_DetallePlanEstudio</td>
                                <td>@p.Tbl_Docente.Nombres_Docente @p.Tbl_Docente.Apellidos_Docente</td>
                                <td>@p.Tbl_DetallePlanEstudio.TipoCurso_DetallePlanEstudio</td>
                                <td>@p.Tbl_DetallePlanEstudio.Ciclo_DetallePlanEstudio</td>
                                <td>@p.Tbl_Seccion.Nombre_Seccion</td>


                                @if (estado == "G")
                                {
                                    <td><span class="custom-badge status-blue">Guardado</span></td>
                                    <td class="text-right">
                                        <div class="dropdown dropdown-action">
                                            <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                                            <div class="dropdown-menu dropdown-menu-right">
                                                
                                                <a class="dropdown-item" href="~/AreaDocente/InformeFinalDocente/Agregar/@p.Codigo_DetalleCargaAcademica"><i class="fa fa-close m-r-5"></i> Editar</a>
                                                <a class="dropdown-item" href="~/AreaDocente/InformeFinalDocente/GuardarEstado/?idprueba=@q.Codigo_InformeFinal&psilabo=@q.PorcentajeSilabo_InformeFinal&prarealizadas=@q.PracticasCalificadas_InformeFinal&elaboratorio=@q.LaboratoriosRealizados_InformeFinal&codigo=@q.Codigo_DetalleCargaAcademica&estado=E&prorealizados=@q.TrabajosRealizados_InformeFinal&matriculados=@q.EstudiantesMatriculados_InformeFinal&estretiro=@q.EstudiantesRetiro_InformeFinal&estabandono=@q.EstudiantesAbandono_InformeFinal&estasistentes=@q.EstudiantesAsisten_InformeFinal&estaprobados=@q.EstudiantesAprobados_InformeFinal&estdesaprobados=@q.EstudiantesDesaprobados_InformeFinal&notaalta=@q.NotaAlta_InformeFinal&notapromedio=@q.NotaPromedio_InformeFinal&notabaja=@q.NotaBaja_InformeFinal&iddocente=@ViewBag.id"><i class="fa fa-check m-r-5"></i> Enviar</a>
                                                
                                            </div>
                                        </div>
                                    </td>

                                }
                                @if (estado == "E")
                                {
                                    <td><span class="custom-badge status-purple">Enviado</span></td>
                                    <td class="text-right">
                                        <div class="dropdown dropdown-action">
                                            <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                                            <div class="dropdown-menu dropdown-menu-right">

                                                <a class="dropdown-item" href="~/InformeFinal/ExportaAPDF/@p.Codigo_DetalleCargaAcademica"><i class="fa fa-eye m-r-5"></i> Ver</a>
                                            </div>
                                        </div>
                                    </td>

                                }
                                @if (estado == "R")
                                {
                                    <td><span class="custom-badge status-red">Rechazado</span></td>
                                    <td class="text-right">
                                        <div class="dropdown dropdown-action">
                                            <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                                            <div class="dropdown-menu dropdown-menu-right">

                                                <a class="dropdown-item" href="~/AreaDocente/InformeFinalDocente/Agregar/@p.Codigo_DetalleCargaAcademica"><i class="fa fa-close m-r-5"></i> Editar</a>
                                                 <a class="dropdown-item" href="~/AreaDocente/InformeFinalDocente/GuardarEstado/?idprueba=@q.Codigo_InformeFinal&psilabo=@q.PorcentajeSilabo_InformeFinal&prarealizadas=@q.PracticasCalificadas_InformeFinal&elaboratorio=@q.LaboratoriosRealizados_InformeFinal&codigo=@q.Codigo_DetalleCargaAcademica&estado=E&prorealizados=@q.TrabajosRealizados_InformeFinal&matriculados=@q.EstudiantesMatriculados_InformeFinal&estretiro=@q.EstudiantesRetiro_InformeFinal&estabandono=@q.EstudiantesAbandono_InformeFinal&estasistentes=@q.EstudiantesAsisten_InformeFinal&estaprobados=@q.EstudiantesAprobados_InformeFinal&estdesaprobados=@q.EstudiantesDesaprobados_InformeFinal&notaalta=@q.NotaAlta_InformeFinal&notapromedio=@q.NotaPromedio_InformeFinal&notabaja=@q.NotaBaja_InformeFinal&iddocente=@ViewBag.id"><i class="fa fa-check m-r-5"></i> Enviar</a>

                                            </div>
                                        </div>
                                    </td>
                                }
                                @if (estado == "A")
                                {
                                    <td><span class="custom-badge status-green">Aceptado</span></td>
                                    <td class="text-right">
                                        <div class="dropdown dropdown-action">
                                            <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                                            <div class="dropdown-menu dropdown-menu-right">
                                            <a class="dropdown-item" href="~/InformeFinal/ExportaAPDF/@p.Codigo_DetalleCargaAcademica"><i class="fa fa-eye m-r-5"></i> Ver</a>

                                               
                                            </div>
                                        </div>
                                    </td>

                                }


                            </tr>


                                        }
                                    }
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>









