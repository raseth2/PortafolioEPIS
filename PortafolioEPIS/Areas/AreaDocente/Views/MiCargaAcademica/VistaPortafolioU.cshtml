@model List<PortafolioEPIS.Models.Tbl_DetalleCargaAcademica>
@{
    Layout = null;
    List<PortafolioEPIS.Models.Tbl_Portafolio> prueba = ViewBag.Prueba;
    int idpruebas = 0;
    string estado = "";
    string unidad = "";
    int detalleplan = 0;
}



<div class="profile-tabs">

    <div class="row">
        <div class="col-md-12">
            <div class="card-box">
                <div class="table-responsive">
                    <table id="example2" class="table table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Código</th>
                                <th>Asignatura</th>
                                <th>Docente</th>
                                <th>Tipo</th>
                                <th>Ciclo</th>
                                <th>Seccion</th>
                                <th>Unidad</th>
                                <th>Estado</th>

                                <th class="text-right">Accción</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ int num = 0;}
                            @foreach (var q in prueba)
                            {
                                @*<label> cad @q.Codigo_DetalleCargaAcademica o</label>
                                    if (q.Codigo_DetalleCargaAcademica == Convert.ToInt32(ViewBag.id))
                                    {
                                        idpruebas = q.Codigo_PruebaEntrada;
                                        estado = q.Estado_PruebaEntrada;
                                        detalleplan = q.Codigo_DetalleCargaAcademica;

                                        <label>@idpruebas</label>
                                        <label>@estado</label>
                                        <label>@detalleplan</label>*@
                                foreach (var p in Model)

                                {

                                    if (p.Tbl_Docente.Codigo_Docente.Equals(Convert.ToInt32(ViewBag.id)))
                                    {

                                        if (p.Codigo_DetalleCargaAcademica == q.Codigo_DetalleCargaAcademica)
                                        {
                                            estado = q.Estado_Portafolio;
                                            unidad = q.Unidad_Portafolio;
                                            num = num + 1;
                            <tr>
                                <td>@num</td>
                                <td><a href="~/DetalleCargaAcademica/Ver/@p.Tbl_DetallePlanEstudio.CodigoCurso_DetallePlanEstudio">@p.Tbl_DetallePlanEstudio.CodigoCurso_DetallePlanEstudio</a></td>
                                <td>@p.Tbl_DetallePlanEstudio.Asignatura_DetallePlanEstudio</td>
                                <td>@p.Tbl_Docente.Nombres_Docente @p.Tbl_Docente.Apellidos_Docente</td>
                                <td>@p.Tbl_DetallePlanEstudio.TipoCurso_DetallePlanEstudio</td>
                                <td>@p.Tbl_DetallePlanEstudio.Ciclo_DetallePlanEstudio</td>
                                <td>@p.Tbl_Seccion.Nombre_Seccion</td>
                                @if (unidad == "UI")
                                {
                                    <td>Unidad I</td>
                                }
                                @if (unidad == "UII")
                                {
                                    <td>Unidad II</td>
                                }
                                @if (unidad == "UIII")
                                {
                                    <td>Unidad III</td>
                                }


                                @if (estado == "G")
                                {
                                    <td><span class="custom-badge status-grey">Guardado</span></td>
                                    <td class="text-right">
                                        <div class="dropdown dropdown-action">
                                            <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                                            <div class="dropdown-menu dropdown-menu-right">
                                                <a class="dropdown-item" href="#"><i class="fa fa-eye m-r-5"></i> Ver</a>
                                                <a class="dropdown-item" href="~/AreaDocente/PruebaEntrada/GuardarEstado/?id=@q.Codigo_Portafolio&codigodetalle=@q.Codigo_DetalleCargaAcademica&estado=E&iddocente=@ViewBag.id"><i class="fa fa-check m-r-5"></i> Enviar</a>
                                                <a class="dropdown-item" href="#"><i class="fa fa-close m-r-5"></i> Editar</a>
                                            </div>
                                        </div>
                                    </td>

                                }
                                @if (estado == "E")
                                {
                                    <td><span class="custom-badge status-purple">Enviado</span></td>
                                    <td class="text-right">
                                        <div class="dropdown dropdown-action">
                                            <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                                            <div class="dropdown-menu dropdown-menu-right">
                                                <a class="dropdown-item" href="#"><i class="fa fa-eye m-r-5"></i> Ver</a>
                                                <a class="dropdown-item" href="#"><i class="fa fa-cloud-download m-r-5"></i> Descargar</a>
                                            </div>
                                        </div>
                                    </td>

                                }
                                @if (estado == "R")
                                {
                                    <td><span class="custom-badge status-red">Rechazado</span></td>
                                    <td class="text-right">
                                        <div class="dropdown dropdown-action">
                                            <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                                            <div class="dropdown-menu dropdown-menu-right">
                                                <a class="dropdown-item" href="#"><i class="fa fa-eye m-r-5"></i> Ver</a>
                                                <a class="dropdown-item" href="~/PruebaEntrada/GuardarEstado/?id=@q.Codigo_Portafolio&codigodetalle=@q.Codigo_DetalleCargaAcademica&retirados=@q.Retirados_Portafolio&estado=A&iddocente=@ViewBag.id"><i class="fa fa-check m-r-5"></i> Enviar</a>
                                                <a class="dropdown-item" href="#"><i class="fa fa-eye m-r-5"></i> Editar</a>
                                            </div>
                                        </div>
                                    </td>
                                }
                                @if (estado == "A")
                                {
                                    <td><span class="custom-badge status-green">Aceptado</span></td>
                                    <td class="text-right">
                                        <div class="dropdown dropdown-action">
                                            <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                                            <div class="dropdown-menu dropdown-menu-right">
                                                <a class="dropdown-item" href="#"><i class="fa fa-eye m-r-5"></i> Ver</a>

                                                <a class="dropdown-item" href="#"><i class="fa fa-cloud-download m-r-5"></i> Descargar</a>
                                            </div>
                                        </div>
                                    </td>

                                }
                            </tr>

                                        }
                                    }
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>








